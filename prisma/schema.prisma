// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DynamicPage {
  id        String   @id @default(uuid())
  title     String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Block {
  id         String    @id @default(uuid())
  pageRelUrl String
  key        String
  blockType  BlockType
  content    String
  elementTag String?
  updatedAt  DateTime  @updatedAt

  @@unique([pageRelUrl, key], name: "pageRelUrl_key") 
  @@index([pageRelUrl])
}

enum BlockType {
  TEXT
  IMAGE
  VIDEO
  HTML
}


model People {
  id        Int      @id @default(autoincrement())
  name      String
  role      String
  imageUrl  String?
  featured  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Expertise {
  id        Int        @id @default(autoincrement())
  title     String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  services  Service[]
}

model Service {
  id           Int        @id @default(autoincrement())
  expertiseId  Int
  title        String
  slug         String     @unique
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  expertise    Expertise  @relation(fields: [expertiseId], references: [id], onDelete: Cascade)

  @@index([expertiseId])
}

/// Insights blog/news entries
model Insight {
  id          Int              @id @default(autoincrement())
  slug        String           @unique
  title       String
  description String
  category    InsightCategory
  publisher   String
  imageUrl    String?
  publishedAt DateTime         @default(now())
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

enum InsightCategory {
  ARTICLES
  NEWS
  UPDATES
  PUBLICATIONS
}

model FooterLink {
  id        Int             @id @default(autoincrement())
  category  FooterCategory
  label     String
  href      String
  order     Int             @default(0)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}

enum FooterCategory {
  SOCIAL
  NAVIGATION
  CONTACTS
}

model Partner {
  id        Int      @id @default(autoincrement())
  name      String
  slug      String   @unique
  industry  String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
