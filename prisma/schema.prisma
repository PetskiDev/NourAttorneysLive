// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DynamicPage {
  id        String   @id @default(uuid())
  title     String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Block {
  id         String    @id @default(uuid())
  pageRelUrl String
  key        String
  blockType  BlockType
  content    String
  updatedAt  DateTime  @updatedAt

  @@unique([pageRelUrl, key], name: "pageRelUrl_key") 
  @@index([pageRelUrl])
}

enum BlockType {
  TEXT
  IMAGE
  VIDEO
  HTML
}


model People {
  id        Int      @id @default(autoincrement())
  name      String
  role      String
  imageUrl  String?
  featured  Boolean  @default(false)
  createdAt DateTime @default(now())
}
